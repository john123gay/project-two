<div class="w3-container w3-animate-left">
  <div class="w3-light-blue w3-text-white w3-animate-bottom">
    <h1 class="w3-jumbo w3-center w3-text-white w3-marck">Wedding Planner</h1>

  </div>
  <div style="margin-left:20%">
    <h2 class="w3-pale-red w3-padding w3-marck w3-center" style="width:75%">List the Items You Must Have</h2>
    <ul class="w3-ul w3-border w3-large w3-card" style="width:75%">
      {{#each weddings}}
      {{#unless essentials}}
      {{> weddings/wedding-block essential=true}}
      {{/unless}}
      {{/each}}
    </ul>

    <h2 class="w3-pale-red w3-padding w3-marck w3-center" style="width:75%">List the Items You Don't Need But Would Be Nice to
      Have</h2>

    <ul class="w3-ul w3-border w3-large w3-card" style="width:75%">
      {{#each weddings}}
      {{#if essentials}}
      {{> weddings/wedding-block essential=false}}
      {{/if}}
      {{/each}}
    </ul>

    <h2 class="w3-pale-red w3-padding w3-marck w3-center" style="width:75%">Add an Item</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Item Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="ca">Amount:</label>
        <input type="text" id="amount" name="amount">
      </div>

      <div class="form-group">
        <label for="essential">Must Have versus Need to Have</label><br>
        <input type="radio" name="essentials" value="1" checked> Nice to Have<br>
        <input type="radio" name="essentials" value="0"> Must Have
      </div>

      <button class="w3-button w3-light-grey" type="submit">Add Item</button>
    </form>

  </div>
</div>